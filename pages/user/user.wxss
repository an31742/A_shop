.user {
  height: 40vh;
  background: #fff;
  position: relative;
}
.user-info {
  height: 100%;
  background: yellowgreen;
}
.user-info .bg {
  width: 100%;
  height: 100%;
  filter: blur(3px);
}
.user-info .info {
  position: absolute;
  top: 70px;
  left: 50%;
  transform: translateX(-50%);
}
.user-info .info .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2px solid yellowgreen;
}
.user-info .info .nn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  color: #fff;
}
.user-btn {
  background: var(--themeColor);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-btn button {
  width: 100px;
  height: 40px;
  color: yellowgreen;
  border: 2px solid yellowgreen;
  background: var(--themeColor);
}
page {
  background: #ddd;
}
.list {
  height: 300px;
  width: 700rpx;
  margin-left: 25rpx;
  margin-top: -50rpx;
  position: relative;
}
.list1 {
  background: #fff;
  display: flex;
}
.list1 view {
  flex: 1;
  height: 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.list1 view .num {
  color: var(--themeColor);
}
.order-title {
  margin-top: 20rpx;
  height: 60rpx;
  background: #fff;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}
.list2 {
  display: flex;
  background: #fff;
}
.list2 navigator {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40px;
}
.addr {
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}
.makeCall,
.aboutwe {
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
  border-bottom: 1px solid #ccc;
}
.feedback {
  height: 80rpx;
  background: #fff;
  padding: 0 10rpx;
  border-bottom: 1px solid #ccc;
}
.feedback button {
  width: 100%;
  height: 100%;
  background: transparent;
  font-weight: 400;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
}
.aboutwe {
  margin-top: 0;
  border: none;
}
.share {
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 0 10rpx;
}
.share button {
  width: 100%;
  height: 100%;
  background: transparent;
  font-weight: 400;
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
}
